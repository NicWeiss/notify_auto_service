<label>{{this.label}}</label>
<select class="form-control" onchange={{action select value="target.value"}}>
  <option disabled selected value> -- Выберите систему -- </option>
  {{#each this.model as | item|}}
    <Utils::SkipIfValueInFieldEq @object={{item}} @field={{@skipByField}} @value={{@skipWithValue}}>
      <option value={{item.id}} selected={{if (eq selected item) 'selected'}}>
        {{item.name}}
      </option>
    </Utils::SkipIfValueInFieldEq>
  {{/each}}
</select>
