<div class="form-group">
  <label for="notify-name">Название</label>
  <Input type="text" class="form-control" id="notify-name" @value={{@notifyNew.name}} />
</div>

<div class="form-group">
  <label for="notify-text">Содержание</label>
  <Textarea type="text" class="form-control notify-text" id="notify-text" @value={{@notifyNew.text}} />
</div>

<div class="form-group d-flex justify-content-between">
  <div class="full-container d-flex flex-column">
    <label>День: </label>
    <EmberFlatpickr class="datetime-custom" @date={{this.date}} @dateFormat="d.m.Y" @onChange={{this.onSelectDate}} @prevArrow="<"
      @nextArrow=">" @onReady={{this.onDateReady}} />
  </div>

  <div class="full-container d-flex flex-column">
    <label>Время: </label>
    <EmberFlatpickr class="datetime-custom" @date={{this.date}} @dateFormat="H:i:s" @enableTime={{true}} @noCalendar={{true}}
      @time_24hr={{true}} @onChange={{this.onSelectTime}} @onReady={{this.onTimeReady}} />
  </div>
</div>

<div class="form-group">
  <Form::MultiSelectList
    @value={{@notifyNew.acceptorsList}}
    @modelName="acceptor"
    @label="Получатели"/>
</div>


<div class="d-flex justify-content-center">
  <button type="button" class="btn btn-secondary btn-complete" onclick={{action this.args.onCancel}}>
    Отменить
  </button>
  <button type="button" class="btn btn-primary btn-complete" onclick={{action onComplete}}>
    Создать
  </button>
</div>