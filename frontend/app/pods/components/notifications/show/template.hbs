<table>
  <tr>
    <td>Название:</td>
    <td>{{@model.name}}</td>
  </tr>
  <tr>
    <td>Содержимое:</td>
    <td>{{@model.text}}</td>
  </tr>
  <tr>
    <td>Получатели:</td>
    <td>{{this.acceptorList}}</td>
  </tr>
  <tr>
    <td>Периодичность:</td>
    <td>{{get PERIODIC @model.periodic}}</td>
  </tr>
  <tr>
    <td>День выполнения:</td>
    <td>
      {{#if @model.dayOfWeek}}
        {{get WEEK @model.dayOfWeek}}
      {{/if}}
      <Utils::FromGmt @type="date" @date={{@model.date}} @time={{@model.time}} />
    </td>
  </tr>
  <tr>
    <td>Время выполнения:</td>
    <td><Utils::FromGmt @type="time" @date={{@model.date}} @time={{@model.time}} /></td>
  </tr>
</table>
