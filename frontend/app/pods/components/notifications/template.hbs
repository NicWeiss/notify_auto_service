<div class="form-group d-flex justify-content-center table-responsive">
  <table class="rwd-table">
    <tr>
      <th>#</th>
      <th>Статус</th>
      <th>Название</th>
      <th>День выполнения</th>
      <th>Время выполнения</th>
      <th>Периодичность</th>
      <th></th>
    </tr>
    {{#each @model as | item|}}
    <tr {{action this.args.onShow item}}>
      <th data-th="# ">{{item.id}}</th>
      <td data-th="Статус: "><Utils::StatusColored @status={{item.status}} /></td>
      <td data-th="Название: ">
        {{item.name}}
        {{#unless item.acceptorsList}}
          <br>
          <span class="text-danger">Нет получателей</span>
        {{/unless}}
      </td>
      <td data-th="День выполнения: ">
        {{#if item.dayOfWeek}}
          {{get WEEK item.dayOfWeek}}
        {{/if}}
        <Utils::FromTimestamp @type='date' @timestamp={{item.date}} />
      </td>
      <td data-th="Время выполнения: "><Utils::FromTimestamp @type='time' @timestamp={{item.time}} /></td>
      <td data-th="Периодичность: ">{{get PERIODIC item.periodic}}</td>
      <td data-th="">
        <div class="buttons-bar justify-content-around">
          {{#if (eq item.status "1")}}
            <div class="btn btn-outline-warning btn-icon" {{action 'onChangeStatus' item bubbles=false}}>{{fa-icon "bell-slash"}}</div>
          {{else}}
            <div class="btn btn-outline-success btn-icon" {{action 'onChangeStatus' item bubbles=false}}>{{fa-icon "bell"}}</div>
          {{/if}}
          <div class="btn btn-outline-primary btn-icon" {{action this.args.onEdit item bubbles=false}}>{{fa-icon "pencil"}}</div>
          <div class="btn btn-outline-danger btn-icon" {{action 'onDeleteNotify' item bubbles=false}}>{{fa-icon "trash"}}</div>
        </div>
      </td>
    </tr>
    {{/each}}
  </table>
</div>

{{#if isShowDeleteModal}}
  <Notifications::Delete @notify={{itemForDelete}} @onClose={{action onClose}} />
{{/if}}
