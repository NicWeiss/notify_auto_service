<form class="custom-form">
  <div class="form-container">
    <h1 class="header-text">Добавить нового получателя</h1>

    <div class="form-group">
      <label for="notify-name">Название</label>
      <input type="text" class="form-control" id="notify-name">
    </div>

    <div class="form-group">
      <label for="periodic-select">Система получателя</label>
      <select class="form-control" id="periodic-select" onchange={{action 'onChangeSystem' value="target.value"}}>
        <option value="tg">Telegram</option>
        <option value="email">Почта</option>
        <option value="vk">Вконтакте</option>
        <option value="viber">Viber</option>
      </select>
    </div>

    <div class="form-group">
      <label for="notify-text">Аккаунт получателя</label>
      <input type="text" class="form-control" id="notify-text"/>
    </div>

    <div class="form-group">
      <label>{{help}}</label>
    </div>

    <div class="d-flex justify-content-center">
      <button type="button" class="btn btn-primary btn-complete" onclick={{action onComplete}}>
        Создать
      </button>
    </div>


  </div>
</form>