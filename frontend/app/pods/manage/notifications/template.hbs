

<form class="custom-form">
  <div class="list-container">
    <h1 class="header-text">Список уведомлений</h1>

    <div class="d-flex justify-content-between custom-form">
      <div class="btn-outline-orange btn">
        {{fa-icon "filter"}} Фильтр
      </div>

      <LinkTo @route="manage.notifications.new" class="btn-outline-orange btn">
        {{fa-icon "plus"}} Создать
      </LinkTo>
    </div>

    {{#if @model.data}}
      <Notifications @model={{model.data}}
        @onShow={{route-action 'show'}}
        @onRefresh={{route-action 'onRefresh'}}
        @onEdit={{route-action 'onEdit'}}
      />
    {{/if}}

  </div>
</form>

<div style="visibility:collapse;">
  {{#if @model.data}}
    <InfinityLoader @infinityModel={{@model.data}}/>
  {{/if}}
</div>

{{#unless isInfinityReached}}
  <div class="preloader">
    <img class="spinner" src="/assets/images/spinner.gif">
  </div>
{{/unless}}

{{outlet}}
